.app
    width: 100%;
    height 100%;
    color: #ddd;
    background-color: #212121;
    .app-header
        height 55px;
        line-height 55px;
        color: #ffd700;
        text-align: center;
        .app-logo
            width 30px;
            height 25px
            margin-top: -5px;
            vertical-align: middle;
        .app-title
            display: inline-block;
            height 55px;
            margin-left 10px;
            font-size: 18px;
            font-weight: 300
      .music-tab
            display: flex;
            height 30px;
            line-height 30px;
            color: #ddd;
            text-align: center;
            margin-bottom :2px;
            .tab-item
                flex: 1;
                .nav_link, .link
                    display: block
                    color: inherit
                    text-decoration: none
                    &.active
                        color: #FFD700
                        border-bottom: 2px solid #FFD700
